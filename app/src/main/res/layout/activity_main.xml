<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/btn_name"
        android:text="点击"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:id="@+id/btn_jump"
        android:text="跳转"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/btn_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>

    <CheckBox
        android:id="@+id/cb_remember"
        android:text="记住"
        app:layout_constraintTop_toBottomOf="@id/btn_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <RadioGroup
        android:id="@+id/rg_choose"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btn_name"
        app:layout_constraintStart_toEndOf="@id/cb_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_check1"
            android:text="选择1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/rb_check2"
            android:text="选择2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>
    </RadioGroup>

    <Switch
        android:id="@+id/sw_open"
        android:text="打开"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_name"
        app:layout_constraintStart_toEndOf="@id/rg_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Switch>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>